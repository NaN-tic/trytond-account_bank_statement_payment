<data>
    <xpath expr="/form/label[@name='clearing_account']" position="before">
        <!-- TODO: it should go to account_payment_clearing -->
        <separator id="clearing" string="Clearing" colspan="4"/>
    </xpath>
    <xpath expr="/form/field[@name='clearing_journal']" position="after">
        <label name="clearing_percent"/>
